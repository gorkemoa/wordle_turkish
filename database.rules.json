{
  "rules": {
    "users": {
      "$uid": {
        ".read": "auth != null && auth.uid == $uid",
        ".write": "auth != null && auth.uid == $uid",
        "avatar": {
          ".read": "auth != null && auth.uid == $uid",
          ".write": "auth != null && auth.uid == $uid"
        },
        "lastActiveAt": {
          ".read": "auth != null && auth.uid == $uid",
          ".write": "auth != null && auth.uid == $uid"
        }
      }
    },
    "presence": {
      ".read": "auth != null",
      "$uid": {
        ".read": "auth != null",
        ".write": "auth != null && auth.uid == $uid",
        "isOnline": {
          ".read": "auth != null",
          ".write": "auth != null && auth.uid == $uid"
        },
        "lastSeen": {
          ".read": "auth != null", 
          ".write": "auth != null && auth.uid == $uid"
        },
        "deviceInfo": {
          ".read": "auth != null",
          ".write": "auth != null && auth.uid == $uid"
        }
      }
    },
    "waiting_room": {
      ".read": "auth != null",
      ".write": "auth != null",
      ".indexOn": ["status", "gameMode", "preferredWordLength"],
      "$uid": {
        ".read": "auth != null",
        ".write": "auth != null && auth.uid == $uid"
      }
    },
    "matches": {
      ".read": "auth != null",
      ".write": "auth != null",
      ".indexOn": ["status", "createdAt"],
      "$matchId": {
        ".read": "auth != null",
        ".write": "auth != null"
      }
    },
    "moves": {
      ".read": "auth != null",
      ".write": "auth != null",
      "$matchId": {
        ".read": "auth != null",
        ".write": "auth != null",
        "$playerId": {
          ".read": "auth != null",
          ".write": "auth != null && auth.uid == $playerId"
        }
      }
    },
    "events": {
      ".read": "auth != null",
      ".write": "auth != null",
      "$matchId": {
        ".read": "auth != null",
        ".write": "auth != null"
      }
    },
    "test": {
      ".read": "auth != null",
      ".write": "auth != null"
    },
    "test_connection": {
      ".read": "auth != null",
      ".write": "auth != null"
    },
    "duel_games": {
      ".read": "auth != null",
      ".write": "auth != null",
      ".indexOn": ["status"]
    },
    "matchmaking_queue": {
      ".read": "auth != null",
      ".write": "auth != null",
      ".indexOn": ["status", "timestamp"],
      "$uid": {
        ".read": "auth != null",
        ".write": "auth != null && auth.uid == $uid"
      }
    },
    "queue": {
      ".read": "auth != null",
      "$userId": {
        ".read": "auth != null && auth.uid == $userId",
        ".write": "auth != null && auth.uid == $userId",
        "userId": {
          ".validate": "newData.isString() && newData.val() == auth.uid"
        },
        "displayName": {
          ".validate": "newData.isString() && newData.val().length >= 1 && newData.val().length <= 30"
        },
        "avatar": {
          ".validate": "newData.isString() && newData.val().length >= 1 && newData.val().length <= 10"
        },
        "entryTime": {
          ".validate": "newData.isNumber() && newData.val() <= now"
        },
        "status": {
          ".validate": "newData.isString() && (newData.val() == 'searching' || newData.val() == 'expired')"
        }
      }
    },
    "userStatus": {
      "$userId": {
        ".read": "auth != null && auth.uid == $userId",
        ".write": "auth != null && auth.uid == $userId",
        "status": {
          ".validate": "newData.isString() && (newData.val() == 'online' || newData.val() == 'offline' || newData.val() == 'in_queue' || newData.val() == 'in_game' || newData.val() == 'disconnected')"
        },
        "lastSeen": {
          ".validate": "newData.isNumber() && newData.val() <= now"
        },
        "currentMatch": {
          ".validate": "newData.isString() || newData.val() == null"
        }
      }
    },
    "connections": {
      "$userId": {
        "$connectionId": {
          ".read": "auth != null && auth.uid == $userId",
          ".write": "auth != null && auth.uid == $userId",
          "connectedAt": {
            ".validate": "newData.isNumber() && newData.val() <= now"
          },
          "platform": {
            ".validate": "newData.isString()"
          }
        }
      }
    },
    "queueOperations": {
      "$operationId": {
        ".read": "auth != null",
        ".write": "auth != null"
      }
    },
    "matchmakingConfig": {
      ".read": "auth != null",
      ".write": false
    }
  }
} 